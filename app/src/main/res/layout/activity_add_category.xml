<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddCategoryActivity">

    <RelativeLayout
        android:id="@+id/layout_complete"
        android:padding="20dp"
        android:background="@color/first_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/img_cross"
                android:src="@drawable/ic_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_cross"
                android:textColor="@android:color/white"
                android:id="@+id/tv_add_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Add Category"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/img_tick"
                android:src="@mipmap/tick"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </RelativeLayout>

        <RelativeLayout
           android:layout_marginTop="20dp"
           android:layout_below="@+id/layout_1"
           android:id="@+id/layout_2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RelativeLayout
               android:id="@+id/layout_circle"
               android:background="@drawable/circle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/image_view_selected"
                   android:layout_centerInParent="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/home_grey"/>

           </RelativeLayout>

           <EditText
               android:id="@+id/etName"
               android:textColor="@android:color/white"
               android:layout_centerVertical="true"
               android:background="@null"
               android:textColorHint="@android:color/white"
               android:layout_marginLeft="10dp"
               android:layout_toRightOf="@+id/layout_circle"
               android:layout_width="match_parent"
               android:textSize="20dp"
               android:focusable="true"
               android:layout_height="wrap_content"
               android:hint="Category Name"/>

       </RelativeLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvColors"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>