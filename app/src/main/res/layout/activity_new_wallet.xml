<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewWalletActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navy_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/imgBack"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Wallet"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Save"
                android:textColor="@color/green"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1">

        <RelativeLayout
            android:id="@+id/layout_new_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <EditText
                android:focusable="true"
                android:id="@+id/edt_balance"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_currency"
                android:layout_margin="5dp"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:background="@null"
                android:hint="e.g 1500"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Balance"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_currency2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_currency"
                android:layout_margin="5dp"
                android:text="PKR"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:id="@+id/divider_view_first"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/layout_new_wallet"
            android:background="@color/light_grey" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2">

        <RelativeLayout
            android:id="@+id/wallet_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <EditText
                android:id="@+id/edt_wallet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_currency_new"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/img_wallet"
                android:hint="Wallet Name"
                android:maxLines="1"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_currency_new"
                android:layout_margin="5dp"
                android:src="@drawable/wallet_green" />

            <TextView
                android:id="@+id/tv_currency_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Details"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_layout"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="20dp"
            android:layout_below="@id/wallet_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"/>

            <TextView
                android:id="@+id/tvAllExpenses"
                android:layout_below="@id/tvCategory"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="All Expenses"/>

            <ImageView
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward_arrow"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>