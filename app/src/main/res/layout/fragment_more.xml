<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.MoreFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <RelativeLayout
          android:id="@+id/layout1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/navy_blue">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="30dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="More"
                  android:textColor="@android:color/white"
                  android:textSize="18sp" />

          </RelativeLayout>

      </RelativeLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="20dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="10dp"
          android:text="General"
          android:textColor="@android:color/black"
          android:textSize="16sp" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_margin="20dp"
          android:layout_height="wrap_content">

          <de.hdodenhof.circleimageview.CircleImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:id="@+id/profile_image"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:src="@mipmap/ic_launcher"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Username"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="18sp"
              android:id="@+id/tv_username"
              android:layout_toRightOf="@+id/profile_image"/>

          <TextView
              android:layout_toRightOf="@+id/profile_image"
              android:layout_below="@+id/tv_username"
              android:id="@+id/tv_email"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="dummy@gmail.com"/>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:padding="10dp"
          android:layout_margin="10dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/changepwd_more"/>

          <TextView
              android:layout_toRightOf="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="Change Password"/>

      </RelativeLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="@color/light_grey"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Wallet and Accounts"
          android:textColor="@android:color/black"
          android:textSize="16sp" />

      <RelativeLayout
          android:id="@+id/manual_wallets"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:padding="10dp"
          android:layout_margin="10dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/wallet_more"/>

          <TextView
              android:layout_toRightOf="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="Manual Wallets"/>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:padding="10dp"
          android:layout_margin="10dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/curency_more"/>

          <TextView
              android:layout_toRightOf="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="Main Currency"/>

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/manage_categories"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:padding="10dp"
          android:layout_margin="10dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/sign_out"/>

          <TextView
              android:layout_toRightOf="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="Manage Categories"/>

      </RelativeLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="@color/light_grey"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Other"
          android:textColor="@android:color/black"
          android:textSize="16sp" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:padding="10dp"
          android:id="@+id/about_app_layout"
          android:layout_margin="10dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/info_more"/>

          <TextView
              android:layout_toRightOf="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="About App"/>

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/share_app_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:padding="10dp"
          android:layout_margin="10dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/share_more"/>

          <TextView
              android:layout_toRightOf="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="Share to a friend"/>

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rate_app_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:padding="10dp"
          android:layout_margin="10dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/star_more"/>

          <TextView
              android:layout_toRightOf="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="Rate App"/>

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/logout_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/selectableItemBackground"
          android:padding="10dp"
          android:layout_margin="10dp"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_marginRight="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/sign_out"/>

          <TextView
              android:layout_toRightOf="@+id/img_password"
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:text="Logout"/>

      </RelativeLayout>

      <TextView
          android:layout_margin="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Version 1.0"/>

  </LinearLayout>

</ScrollView>